<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pga.project1" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyActionBarTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.PersonelPickerActivity"
            android:label="@string/title_activity_personel_picker"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.NewReportActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.TaskPageActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.WorkActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.EditReportActivity"
            android:label="@string/title_activity_edit_report"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ShowImageActivity"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_activity_show_image"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" />
        <activity
            android:name=".Activities.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActivityThemeNoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/CustomActivityThemeNoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Activities.TreeViewActivity"
            android:label="@string/title_activity_tree_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".Activities.AddPersonnelToWorkActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".test.testActivity"
            android:label="@string/title_activity_test" >
        </activity>
        <activity
            android:name=".Activities.AboutUsActivity"
            android:label="@string/title_activity_about_us"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
