<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pga.project1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme">
        <activity
            android:name=".Activities.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:label="@string/app_name"></activity>
        <activity
            android:name=".Activities.PersonelPickerActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_personel_picker" />
        <activity
            android:name=".Activities.NewReportActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.TaskPageActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.WorkActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />
        <activity
            android:name=".Activities.EditReportActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_edit_report"></activity>
        <activity
            android:name=".Activities.ShowImageActivity"
            android:screenOrientation="portrait"
            android:hardwareAccelerated="false"
            android:label="@string/title_activity_activity_show_image"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar"></activity>
        <activity
            android:name=".Activities.SplashActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_splash"
            android:theme="@style/CustomActivityThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"
            android:name=".Activities.LoginActivity"
            android:theme="@style/CustomActivityThemeNoActionBar"
            android:label="@string/title_activity_login"></activity>


        <activity
            android:name=".Activities.TreeViewActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_tree_view"></activity>
    </application>

</manifest>
