<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pga.project1.Activities.ProjectPickerActivity">

    <com.pga.project1.Viewes.PathMapManager
        android:id="@+id/pmm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.pga.project1.Viewes.PathMapManager>


    <ListView

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/lv_fragmentProjectTreeView_treeView"
        android:layout_below="@+id/pmm_fragmentProjectTreeView_pathMap"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:dividerHeight="0dp"
        android:scrollingCache="false"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
