<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context="com.pga.project1.Activities.VoroodKalaActivity">

    <com.pga.project1.Viewes.PathMapManager
        android:id="@+id/pmm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        />


    <Button
        android:id="@+id/entekhab_kala"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_button_background"
        android:layout_margin="5dp"

        android:paddingTop="5dp"
        android:text="انتخاب کالای ورودی" />

    <TextView
        android:text="کالای انتخاب شده"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/selected_kala" />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انتخاب انبار مبدا"
            android:layout_weight=".5"
            android:background="@drawable/login_button_background"
            android:layout_margin="5dp"

            android:id="@+id/anbar_picker" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="انتخاب تامین کننده"
            android:layout_weight=".5"
            android:layout_margin="5dp"

            android:background="@drawable/login_button_background"
            android:id="@+id/TaminKonandePicker" />

    </LinearLayout>

    <TextView
        android:text="مبدا انتخاب شده"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/selected_tamin_konande" />


    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/mizanKala"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="میزان کالا" />

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/tozihat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="توضیحات" />


</LinearLayout>
