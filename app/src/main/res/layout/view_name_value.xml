            android:text="salam salam salam salsalam salam salam salam salam salam salam salam salam salam salam salam salam salam salam salam salam salam am salam salam " />

        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/txt_view_name_value_name"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:gravity="right"
